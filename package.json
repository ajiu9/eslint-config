{
  "name": "@ajiu9/eslint-config",
  "type": "module",
  "version": "2.0.2",
  "description": "ajiu9's Eslint config",
  "author": "ajiu9 <615944323@qq.com> (https://github.com/ajiu9/)",
  "license": "MIT",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./bin/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "lint": "eslint --flag unstable_ts_config . --fix",
    "build": "tsup --format esm,cjs --clean --dts",
    "release": "bumpp -r && pnpm -r publish --access public",
    "test": "pnpm build && vitest",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@ajiu9/eslint-config": "workspace:*",
    "@eslint/config-inspector": "^0.5.4",
    "@prettier/plugin-xml": "^3.4.1",
    "@types/fs-extra": "^11.0.4",
    "bumpp": "^9.1.1",
    "eslint": "^9.11.1",
    "eslint-plugin-ajiu9": "link:./packages/eslint-plugin-ajiu9",
    "eslint-plugin-format": "^0.1.2",
    "execa": "^9.4.0",
    "fs-extra": "^11.2.0",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --flag unstable_ts_config --fix"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@eslint/markdown": "^6.2.1",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "eslint-config-flat-gitignore": "^0.3.0",
    "eslint-flat-config-utils": "^0.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import-x": "^4.3.1",
    "eslint-plugin-n": "^17.11.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.11.0",
    "local-pkg": "^0.5.0"
  },
  "peerDependencies": {
    "@prettier/plugin-xml": "^3.4.1",
    "eslint-plugin-format": "^0.1.2"
  },
  "peerDependenciesMeta": {
    "@prettier/plugin-xml": {
      "optional": true
    }
  }
}
