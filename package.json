{
  "name": "@ajiu9/eslint-config",
  "type": "module",
  "version": "2.5.2",
  "description": "ajiu9's Eslint config",
  "author": "ajiu9 <615944323@qq.com> (https://github.com/ajiu9/)",
  "license": "MIT",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./bin/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "pnpm build",
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "lint": "eslint --flag unstable_ts_config . --fix",
    "build": "tsup --format esm,cjs --clean --dts",
    "watch": "tsup --format esm,cjs --watch",
    "release": "bumpp && pnpm publish",
    "test": "pnpm build && vitest",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "@prettier/plugin-xml": "^3.4.1",
    "@vue/compiler-sfc": "^3.5.12",
    "eslint": "^9.13.0",
    "eslint-plugin-format": "^0.1.2"
  },
  "peerDependenciesMeta": {
    "@prettier/plugin-xml": {
      "optional": true
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@eslint/markdown": "^6.2.1",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "eslint-config-flat-gitignore": "^0.3.0",
    "eslint-config-taro": "^4.0.9",
    "eslint-flat-config-utils": "^0.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import-x": "^4.3.1",
    "eslint-plugin-jsdoc": "^50.4.3",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-n": "^17.11.1",
    "eslint-plugin-perfectionist": "^3.9.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^9.29.1",
    "eslint-plugin-yml": "^1.14.0",
    "globals": "^15.11.0",
    "jsonc-eslint-parser": "^2.4.0",
    "op-pkg": "^0.0.3",
    "vue-eslint-parser": "^9.4.3",
    "yaml-eslint-parser": "^1.2.3"
  },
  "devDependencies": {
    "@ajiu9/eslint-config": "workspace:*",
    "@eslint/config-inspector": "^0.5.4",
    "@prettier/plugin-xml": "^3.4.1",
    "@types/fs-extra": "^11.0.4",
    "@vue/compiler-sfc": "^3.5.12",
    "bumpp": "^9.1.1",
    "eslint": "^9.13.0",
    "eslint-plugin-format": "^0.1.2",
    "execa": "^9.4.0",
    "fs-extra": "^11.2.0",
    "jiti": "^2.3.3",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.11.1",
    "tinyglobby": "^0.2.12",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --flag unstable_ts_config --fix"
  }
}
