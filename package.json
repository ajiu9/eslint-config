{
  "name": "@ajiu9/eslint-config-monorepo",
  "type": "module",
  "version": "2.0.0",
  "description": "ajiu9's Eslint config",
  "author": "ajiu9 <615944323@qq.com> (https://github.com/ajiu9/)",
  "license": "MIT",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./bin/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "lint": "eslint --flag unstable_ts_config .",
    "build": "pnpm -r run build",
    "release": "bumpp -r && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@ajiu9/eslint-config": "workspace:*",
    "bumpp": "^9.1.1",
    "eslint": "^9.11.1",
    "eslint-plugin-ajiu9": "link:./packages/eslint-plugin-ajiu9",
    "rimraf": "^5.0.1",
    "typescript": "^5.6.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --flag unstable_ts_config --fix"
  },
  "dependencies": {
    "eslint-flat-config-utils": "^0.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0"
  }
}
